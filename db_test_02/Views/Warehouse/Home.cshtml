        function validate_form(method) {
            'use strict'
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')


            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)

                .forEach(function (form) {
                    debugger;
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()

                    }
                    if (form.checkValidity()) {
                        debugger;
                        switch (method) {
                            case 'create':
                                create_item();;
                                break;
                            case 'update':
                                update_item();
                                break;
                        }
                        
                    }
                    form.classList.add('was-validated')

                })

        }




        function Read(_page_active) {

            document.getElementById("preloading-btn").classList.remove("d-none");
            let _itemid = document.getElementById("itemid").value;
            document.getElementById('read-result').innerHTML = "";

            $.get("/Warehouse/Read",
                {
                    page_active: _page_active,
                    itemid: _itemid,
                    // city: "Duckburg"
                },
                function (data, status) {

                    document.getElementById("preloading-btn").classList.add("d-none");

                    if (data.not_found) {
                        // if no data found
                        $('#pagging').html('');
                        document.getElementById('read-result').innerHTML = '<h3 class="text-success">No data found !</h3>';
                    } else {
                        debugger;
                        // yes, have data
                        let html_ = "";

                        for (let i = 0; i < data.obj.length; i++) {
                            html_ += "<tr>";
                            html_ += "<td>" + data.obj[i].ItemID + "</td>";
                            html_ += "<td>" + data.obj[i].ItemName + "</td>";
                            html_ += "<td>" + data.obj[i].ItemWhere + "</td>";
                            html_ += "<td>" + "<button type='button' class='btn btn-success' onclick='update_item_modal(" + data.obj[i].ItemID + ")'><i class='bi bi-pencil-square'></i>&nbsp; Edit</button>" + "</td>";
                            html_ += "</tr>";
                        }
                        
                        document.getElementById('read-result').innerHTML = html_;
                        // show pagging
                        pagging(data.totalPage , data.page_active); //total_page , page_active
                    }




                });
        }


